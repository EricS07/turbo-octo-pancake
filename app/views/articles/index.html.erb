<div id = "block">

    <div id="b2"><h1>Listing Articles</h1></div>
    <div id="b3"></div>
    <div id="b1"><loginr><% if user_signed_in? %> Logged in as <%= current_user.username%> [<%= link_to 'Logout',  destroy_user_session_path, :method => :delete%>] <% end %></login></div>
</div>

<br>
<br>
<%= link_to 'New article', new_article_path %>
<div>
<hr>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>When</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>

    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= time_ago_in_words(article.created_at) %> ago </td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <% if current_user.admin? %><td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td><% end %>
    </tr>

  <% end %>
</table>
</div>
<hr>
<br>
<br>
<%= link_to 'Back', home_index_path %>

