<div id = "block">

    <div id="b2"><h1>Listing Articles</h1></div>
    <div id="b3"></div>
</div>

<br>
<br>
<%= link_to 'New article', new_article_path %>
<div>
<hr>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>When</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>

    <tr>
      <td class="col-md-3"><%= article.title %></td>
      <td class="col-md-6"><%= article.text %></td>
      <td class="col-md-2"><%= time_ago_in_words(article.created_at) %> ago </td>
      <td class="col-md-2"><%= link_to 'Show', article_path(article) %></td>
      <% if current_user.admin? %><td class="col-md-1"><%= link_to 'Edit', edit_article_path(article) %></td>
      <td class="col-md-1"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td><% end %>
    </tr>

  <% end %>
</table>
</div>
<hr>

